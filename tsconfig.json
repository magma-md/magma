{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/*", "renderer/ts/*"],
            "@backend/*": ["backend/*"],
            "@renderer/*": ["renderer/*"],
            "@utilities/*": ["utilities/*"],
            "@src/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "renderer/**/*", "backend/**/*"],
    "exclude": ["node_modules"]
}
